<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/common_bg" >

    <!-- Navigation -->
    <include layout="@layout/navigation" />
    
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:orientation="vertical" >
	    
	    <!-- 联系人名称和部门 -->
	    <RelativeLayout android:layout_width="fill_parent"
	        android:layout_height="50dip"
	        android:paddingLeft="@dimen/margin_10"
	        android:paddingTop="@dimen/margin_10" >
	        <TextView 
	            android:id="@+id/tv_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/common_blue"
	            android:text="边小溪" />
	        <TextView 
	            android:id="@+id/tv_department"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/tv_name"
	            android:layout_marginLeft="@dimen/margin_16"
	            android:layout_marginTop="@dimen/margin_10"
	            android:textColor="@color/black"
	            android:text="设计部" />
	    </RelativeLayout>
	    <include layout="@layout/process_w_handle_line_divider" />
	    
	    <!-- 办公电话 -->
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="50dip"
	        android:paddingLeft="@dimen/margin_10"
	        android:paddingTop="@dimen/margin_10" >
	        <TextView 
	            android:id="@+id/tv_bgdh_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/common_blue"
	            android:text="办公电话" />
	        <TextView 
	            android:id="@+id/tv_bgdh"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/tv_bgdh_name"
	            android:textColor="@color/black" />
	    </RelativeLayout>
	    <include layout="@layout/process_w_handle_line_divider" />
	    
	    <!-- 移动电话 -->
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="50dip"
	        android:paddingTop="@dimen/margin_10"
	        android:paddingLeft="@dimen/margin_10" >
	        <TextView 
	            android:id="@+id/tv_phone_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/common_blue"
	            android:text="移动电话" />
	        <TextView 
	            android:id="@+id/tv_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/black"
	            android:layout_below="@id/tv_phone_name" />
			<ImageView android:id="@+id/iv_phone"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentRight="true"
			    android:padding="@dimen/margin_12"
			    android:src="@drawable/ic_phone" />
			<ImageView android:id="@+id/iv_message"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_toLeftOf="@id/iv_phone"
			    android:layout_alignParentBottom="true"
			    android:padding="@dimen/margin_12"
			    android:src="@drawable/ic_message" />
	    </RelativeLayout>
	    <include layout="@layout/process_w_handle_line_divider" />
	    
	    <!-- Email1 -->
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="50dip"
	        android:paddingLeft="@dimen/margin_10"
	        android:paddingTop="@dimen/margin_10" >
	        <TextView 
	            android:id="@+id/tv_email1_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/common_blue"
	            android:text="Email1" />
	        <TextView 
	            android:id="@+id/tv_email1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/tv_email1_name"
	            android:textColor="@color/black" />
	        <ImageView android:id="@+id/iv_email1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentRight="true"
			    android:padding="@dimen/margin_12"
			    android:src="@drawable/ic_email" />
	    </RelativeLayout>
	    <include layout="@layout/process_w_handle_line_divider" />
	    
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="50dip"
	        android:paddingLeft="@dimen/margin_10"
	        android:paddingTop="@dimen/margin_10" >
	        <TextView 
	            android:id="@+id/tv_email2_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/common_blue"
	            android:text="Email2" />
	        <TextView 
	            android:id="@+id/tv_email2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/tv_email2_name"
	            android:textColor="@color/black" />
	        <ImageView android:id="@+id/iv_email2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentRight="true"
			    android:padding="@dimen/margin_12"
			    android:src="@drawable/ic_email" />
	    </RelativeLayout>
	    
	</LinearLayout>
    
</LinearLayout>