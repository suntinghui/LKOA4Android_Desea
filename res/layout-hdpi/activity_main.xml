<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background" >

    <!-- Title -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/activity_main_common_margin"
        android:layout_marginBottom="@dimen/activity_main_common_margin" >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_main_common_margin"
            android:layout_marginRight="5dip"
            android:src="@drawable/ic_photo_def" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#c9c9c6" />
    </LinearLayout>
    <!-- Title end. -->
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        
        <!-- 管理中心、信息中心、流程办理 -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout 
                android:id="@+id/iv_center_mgr"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingTop="58dip"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/activity_main_common_margin"
                android:background="@drawable/center_mgr_bg" >
                <!-- 我的待办 -->
	            <TextView android:id="@+id/tv_my_todo"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="@dimen/activity_main_center_mgr_margin"
	                style="@style/white_14"/>
	            <!-- 我的收文 -->
	            <TextView android:id="@+id/my_received_today"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="@dimen/activity_main_center_mgr_margin"
	                style="@style/white_14"/>
	            <!-- 信息中心 -->
	            <TextView android:id="@+id/tv_center_msg"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="@dimen/activity_main_center_mgr_margin"
	                style="@style/white_14"/>
	            <!--  日程安排 -->
	            <TextView android:id="@+id/tv_schedule"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="@dimen/activity_main_center_mgr_margin"
	                style="@style/white_14"/>
	            <!-- 我的邮件 -->
	            <TextView android:id="@+id/tv_my_email"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="@dimen/activity_main_center_mgr_margin"
	                style="@style/white_14"/>
            </LinearLayout>
            
            <!-- 信息中心和流程办理 -->
            <LinearLayout 
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView android:id="@+id/iv_center_msg"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_marginBottom="@dimen/activity_main_common_margin"
                    android:layout_weight="1"
                    android:background="@drawable/ic_center_msg"/>
                <ImageView android:id="@+id/iv_process_work"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/ic_process_work"/>
            </LinearLayout>
        </LinearLayout>
        
        <!-- 公文办理，日程安排，通讯录 -->
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dip"
		    android:layout_weight="2"
		    android:gravity="center_vertical"
		    android:layout_marginTop="@dimen/activity_main_common_margin"
		    android:orientation="horizontal">
            <ImageView android:id="@+id/iv_doc_handing"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_doc_handing"/>
            <ImageView android:id="@+id/iv_schedule"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_main_common_margin"
                android:background="@drawable/ic_schedule"
                />
            <ImageView android:id="@+id/iv_contacts"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_main_common_margin"
                android:background="@drawable/ic_contacts"/>
		</LinearLayout>
		
		<!-- 我的邮件、我的短信、人事管理 -->
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="0dip"
		    android:layout_weight="2"
		    android:gravity="center_vertical"
		    android:layout_marginTop="@dimen/activity_main_common_margin"
		    android:layout_marginBottom="@dimen/activity_main_common_margin"
		    android:orientation="horizontal">
            <ImageView android:id="@+id/iv_my_email"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_my_email"/>
            <ImageView android:id="@+id/iv_my_msg"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_main_common_margin"
                android:background="@drawable/ic_my_msg"
                />
            <ImageView android:id="@+id/iv_mgr_people"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_main_common_margin"
                android:background="@drawable/ic_mgr_people"/>
		</LinearLayout>
        
    </LinearLayout>

</LinearLayout>