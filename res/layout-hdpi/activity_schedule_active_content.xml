<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/common_bg" >

    <!-- Navigation -->
    <include layout="@layout/navigation" />
    
    <LinearLayout android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_marginTop="20dip"
        android:orientation="vertical"
        android:visibility="gone"
         >
        
        <include 
            android:id="@+id/active_title"
            layout="@layout/schedule_rc_content_item" />
        <include 
            android:id="@+id/active_hddd"
            layout="@layout/schedule_rc_content_item" />
        <include 
            android:id="@+id/active_fqbm"
            layout="@layout/schedule_rc_content_item" />
        <include 
            android:id="@+id/active_date"
            layout="@layout/schedule_rc_content_item" />
        <include 
            android:id="@+id/active_state"
            layout="@layout/schedule_rc_content_item" />
        <include 
            android:id="@+id/active_cyr"
            layout="@layout/schedule_rc_content_item" />
        <include 
            android:id="@+id/active_cjld"
            layout="@layout/schedule_rc_content_item" />
        <include 
            android:id="@+id/active_nr"
            layout="@layout/schedule_rc_content_item" />
        
    </LinearLayout>
    
</LinearLayout>