<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_content_left_right_margin"
    android:layout_marginRight="@dimen/activity_content_left_right_margin"
    android:layout_marginTop="@dimen/activity_content_navigation_gap"
    android:background="@drawable/center_msg_news_item_bg_n" >

    <ImageView
        android:id="@+id/iv_center_msg_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:src="@drawable/ic_center_msg_news" />

    <TextView
        android:id="@+id/tv_center_msg_title"
        style="@style/white_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@+id/iv_center_msg_icon"
        android:text="集团新闻" />

    <ImageView
        android:id="@+id/iv_center_msg_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:src="@drawable/ic_to_right_arrow" />

    <TextView
        android:id="@+id/iv_center_msg_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dip"
        android:gravity="center"
        android:layout_toLeftOf="@+id/iv_center_msg_right_arrow"
        android:background="@drawable/ic_number_bg"
        style="@style/red_12" />

</RelativeLayout>